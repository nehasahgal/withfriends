<div>
  <div>
    <h1>
      List of all trips
    </h1>
  </div>
</div>

<hr>
<div>
  <div>
    <table border="1">
      <tr>
        <th>
          ID
        </th>

        <th>
          Destination
        </th>

        <th>
          Number of travelers
        </th>

        <th>
          Created at
        </th>

        <th>
          Updated at
        </th>

        <th>
        </th>
      </tr>

      <% @list_of_trips.each do |a_trip| %>
      <tr>
        <td>
          <%= a_trip.id %>
        </td>

        <td>
          <%= a_trip.destination %>
        </td>

        <td>
          <% matching_travelers = Traveler.where({ :trip_id => a_trip.id}) %>
          <%= matching_travelers.count %>
        </td>

        <td>
          <%= time_ago_in_words(a_trip.created_at) %> ago
        </td>
        <td>
          <%= time_ago_in_words(a_trip.updated_at) %> ago
        </td>

        <td>
          <a href="/trips/<%= a_trip.id %>">
            Show details
          </a>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>

<hr>

<div>
  <div>
    <h2>
      Add a new trip
    </h2>

    <form action="/insert_trip" method="post">
      <div>
        <label for="destination_box">
          Destination
        </label>

        <input type="text" id="destination_box" name="query_destination">
      </div>

      <button>
        Create trip
      </button>
    </form>
  </div>
</div>
